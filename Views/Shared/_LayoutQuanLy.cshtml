    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Script gốc cho sidebar
        const sidebar = document.getElementById('sidebar');
        const sidebarToggle = document.getElementById('sidebarToggle');
        const toggleIcon = sidebarToggle.querySelector('i');
        const productsToggle = document.getElementById('productsToggle');
        const productsSubmenu = document.getElementById('productsSubmenu');

        sidebarToggle.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
            if (sidebar.classList.contains('collapsed')) {
                toggleIcon.classList.replace('bi-chevron-left', 'bi-chevron-right');
                productsSubmenu.classList.remove('show');
                productsToggle.classList.remove('active');
            } else {
                toggleIcon.classList.replace('bi-chevron-right', 'bi-chevron-left');
            }
        });

        productsToggle.addEventListener('click', (e) => {
            e.preventDefault();
            if (!sidebar.classList.contains('collapsed')) {
                productsSubmenu.classList.toggle('show');
                productsToggle.classList.toggle('active');
            }
        });

        // === SCRIPT MỚI CHO NAVBAR TRƯỢT PHẢI ===
        document.addEventListener('DOMContentLoaded', function () {
            const navbarCollapse = document.getElementById('navbarContent');
            const overlay = document.querySelector('.offcanvas-overlay');
            const body = document.body;

            if (navbarCollapse) {
                // Khi menu bắt đầu mở, hiển thị overlay và chặn cuộn trang
                navbarCollapse.addEventListener('show.bs.collapse', function () {
                    overlay.classList.add('show');
                    body.style.overflow = 'hidden'; // Chặn cuộn
                });

                // Khi menu bắt đầu đóng, ẩn overlay và cho phép cuộn lại
                navbarCollapse.addEventListener('hide.bs.collapse', function () {
                    overlay.classList.remove('show');
                    body.style.overflow = ''; // Cho phép cuộn lại
                });

                // Đóng menu khi nhấp vào overlay
                overlay.addEventListener('click', function () {
                    const bsCollapse = bootstrap.Collapse.getInstance(navbarCollapse);
                    if (bsCollapse) {
                        bsCollapse.hide();
                    }
                });
            }
        });
    </script>
</body>
</html>