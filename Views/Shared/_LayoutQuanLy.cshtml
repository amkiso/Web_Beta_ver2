    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/css/layoutstyle.css" rel="stylesheet" />
    <style>
        /* CSS gốc cho Submenu */
        .submenu {
            list-style: none;
            padding-left: 0;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }
        .submenu.show { max-height: 200px; }
        .submenu .nav-link { padding-left: 3rem; font-size: 0.9rem; }
        .nav-link.has-submenu { position: relative; }
        .nav-link.has-submenu::after {
            font-family: 'Bootstrap Icons';
            position: absolute;
            right: 1rem;
            transition: transform 0.3s ease;
        }
        .sidebar.collapsed .submenu,
        .sidebar.collapsed .nav-link.has-submenu::after { display: none; }

        /* CSS gốc cho Navbar Dropdown */
        .nav-item.dropdown .dropdown-menu {
            background-color: #3a3a3a;
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }
        .nav-item.dropdown .dropdown-item {
            color: #fff;
            padding: 0.5rem 1rem;
            transition: background-color 0.2s ease;
        }
        .nav-item.dropdown .dropdown-item:hover { background-color: #4a4a4a; }
        .nav-item.dropdown .dropdown-item i { margin-right: 0.5rem; width: 20px; }

        /* === CSS MỚI CHO NAVBAR RESPONSIVE === */

        /* 1. Lớp phủ (overlay) cho nền mờ */
        .offcanvas-overlay {
            position: fixed;
            top: 0;
            left: 0;
            
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.55);
            z-index: 1040; /* Bên dưới menu nhưng trên nội dung chính */
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.35s ease-in-out, visibility 0.35s ease-in-out;
        }
        .offcanvas-overlay.show {
            opacity: 1;
            visibility: visible;
        }

        /* 2. Tùy chỉnh menu trượt từ phải sang */
        @@media (max-width: 991.98px) {
            .navbar-collapse {
                position: fixed;
                top: 0;
                bottom: 0;
                right: -100%; /* Bắt đầu bên ngoài màn hình */
                width: 85%;
                max-width: 320px;
                height: 100vh; /* Cao bằng màn hình */
                background-color: #2c2c2c;
                z-index: 1045;
                transition: right 0.35s ease-in-out;
                display: block; /* Ghi đè display: flex của Bootstrap */
                padding: 1rem;
                box-shadow: -5px 0 15px rgba(0,0,0,0.2);
            }

            /* Trạng thái khi menu đang trong quá trình chuyển động */
            .navbar-collapse.collapsing {
                height: 100vh;
                transition: right 0.35s ease-in-out;
            }

            /* Trạng thái khi menu đã hiển thị */
            .navbar-collapse.show {
                right: 0; /* Di chuyển vào trong màn hình */
            }

            /* Điều chỉnh các mục trong menu responsive */
            .navbar-collapse .navbar-nav {
                flex-direction: column;
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="offcanvas-overlay"></div>

